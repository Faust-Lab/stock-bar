{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Se connecter</h1>
                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue le nom d'utilisateur ou/et le mot de passe est invalide</div>
                {% endif %}
                <form action="{{ path('account_login') }}" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse Email" required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de Passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de Passe" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>
            </div>
            
            
        </div>
    </div>
    
</div>
{% endblock %}
